<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>Main no</th>
      <th>Alt no</th>
      <th>Email</th>
      <th>Address</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.f_name %></td>
        <td><%= contact.l_name %></td>
        <td><%= contact.main_no %></td>
        <td><%= contact.alt_no %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= contact.employer %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

